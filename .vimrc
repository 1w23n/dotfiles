colorscheme koehler

set display=lastline

set number
set ruler

set matchtime=1
set showmatch
set cursorline

set tabstop=2
set shiftwidth=2
set expandtab

syntax on
set scrolloff=5
set noswapfile
set nowritebackup
set nobackup

inoremap { {}<LEFT>
inoremap [ []<LEFT>
inoremap ( ()<LEFT>
inoremap < <><LEFT>
inoremap " ""<LEFT>
inoremap ' ''<LEFT>
